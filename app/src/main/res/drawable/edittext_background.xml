<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for EditText -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border around the EditText -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- Light grey border -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
